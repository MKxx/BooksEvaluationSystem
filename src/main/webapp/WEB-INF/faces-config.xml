<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
             
    <application>
        <locale-config>
            <default-locale>pl</default-locale>
            <supported-locale>pl</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>internacjonalizacja.messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>nazwy_rol.role</base-name>
            <var>role</var>
        </resource-bundle>
        <message-bundle>internacjonalizacja.jsf_messages</message-bundle>
    </application>
    <navigation-rule>
        <navigation-case>
            <from-outcome>sukces</from-outcome>
            <to-view-id>/sukces.xhtml</to-view-id>
            <redirect />
        </navigation-case>
	</navigation-rule>
	<navigation-rule>
		<navigation-case>
			<from-outcome>porazka</from-outcome>
			<to-view-id>/login/blad.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<navigation-case>
			<from-outcome>zalogowano</from-outcome>
			<to-view-id>poLogowaniu.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<navigation-case>
			<from-outcome>nieaktualnedane</from-outcome>
			<to-view-id>nieaktualnedane.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<navigation-case>
			<from-outcome>wylogowano</from-outcome>
			<to-view-id>index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
    <navigation-rule>
            <navigation-case>
                <from-outcome>index</from-outcome>
                <to-view-id>/index.xhtml</to-view-id>
                <redirect />
            </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>cancel</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>edycja</from-outcome>
            <to-view-id>/admin/edycja.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>edycjaPoziomow</from-outcome>
            <to-view-id>/admin/poziomydostepu.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>panelAdm</from-outcome>
            <to-view-id>/admin/adminpanel.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
        <navigation-rule>
        <navigation-case>
            <from-outcome>sukcesEdycja</from-outcome>
            <to-view-id>sukcesEdycja.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
</faces-config>
